@model IEnumerable<WebApplication1.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Danh mục sản phẩm</h1>

<p>
    <a class="btn btn-inverse-dark" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID 
            </th>
            <th>
                Tên danh mục 
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a class="btn btn-inverse-info" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> 
                <a class="btn btn-inverse-success" asp-action="Details" asp-route-id="@item.CategoryId">Details</a> 
                <a class="btn btn-inverse-danger" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
